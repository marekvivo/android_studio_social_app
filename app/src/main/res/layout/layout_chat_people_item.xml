<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/chat_people_item_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Username"
        android:textColor="@color/black"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:maxLength="10"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/chat_item_username"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="30"
        android:ellipsize="end"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="Hello how are you dearsssssssssssssssssssss"
        android:layout_marginRight="10dp"
        android:id="@+id/chat_item_message"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You:"
        android:layout_toLeftOf="@+id/chat_item_message"
        android:paddingRight="10dp"
        android:textColor="@color/purple_500"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:id="@+id/chat_item_you_tag"
        />


</RelativeLayout>